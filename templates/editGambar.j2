<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/static/styleEdit.css">
    <title>E-Waste Shop</title>
</head>
<body>
    <div class="popup-edit">
        <form method="POST" enctype="multipart/form-data">
          <h2>EDIT BARANG</h2>
          <div class="form">
            <div class="gambar-form">
              <h3>Gambar Barang</h3>
              <input type="file" class="gambar-input" name="gambar">
              <div class="gambar-preview1"><img class="gambar-preview2" name="gambar"></div>
            </div>
            <div class="deskripsi-form">
              <h3>Deskripsi Barang</h3>
              <label for="nama-input">Nama Barang:</label>
              <input class="nama-input" type="text" id="nama-input" name="nama">
              <!-- <input class="form-control" name="username" type="text" placeholder="username" aria-label="username" required> -->
      
              <label for="harga-input">Harga Barang:</label>
              <input type="text" class="harga-input" name="harga">
      
              <label for="deskripsi-input">Deskripsi Barang:</label>
              <textarea class="deskripsi-input" name="deskripsi"></textarea>
              <button class="submit-button" type="submit">Submit</button>
            </div>
          </div>
        </form>
      </div>
      <script>
        const gambarInput = document.getElementsByClassName(".gambar-input");
        const gambarPreview = document.getElementsByClassName(".gambar-preview");

        gambarInput.addEventListener("change", function() {
        const file = this.files[0];
        if (file) {
          const reader = new FileReader();
          reader.addEventListener("load", function() {
            gambarPreview.setAttribute("src", this.result);
          });
          reader.readAsDataURL(file);
        }
      });
      </script>
</body>
</html>